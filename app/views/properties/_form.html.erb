<%= form_with(model: property, local: true) do |form| %>
  <% if property.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(property.errors.count, "error") %> prohibited this property from being saved:</h2>

      <ul>
        <% property.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :property_name, "物件名" %>
    <%= form.text_field :property_name %>
  </div>

  <div class="field">
    <%= form.label :rent, "賃料" %>
    <%= form.text_field :rent %>
  </div>

  <div class="field">
    <%= form.label :address, "住所" %>
    <%= form.text_area :address %>
  </div>

  <div class="field">
    <%= form.label :age,"築年数" %>
    <%= form.text_field :age %>
  </div>

  <div class="field">
    <%= form.label :remarks, "備考" %>
    <%= form.text_area :remarks %>
  </div>

  <hr>
<%= form.fields_for :stations do | station | %>
  <h2>最寄駅<%= station.index + 1 %></h2>
  
  <div class="field">
    <%= station.label :route, "路線名" %>
    <%= station.text_field :route %>

  <div class="field">
    <%= station.label :station, "駅名" %>
    <%= station.text_field :station %>

  <div class="field">
    <%= station.label :walking_minutes, "徒歩分数" %>
    <%= station.text_field :walking_minutes %>
  </div>
<% end %>

  <div class="actions">
    <%= form.submit %>
<% end %>
