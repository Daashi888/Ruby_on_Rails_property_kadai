<p id="notice"><%= notice %></p>

<h1>閲覧</h1>

<p>
  <strong>物件名:</strong>
  <%= @property.property_name %>
</p>

<p>
  <strong>賃料:</strong>
  <%= @property.rent %>
</p>

<p>
  <strong>住所:</strong>
  <%= @property.address %>
</p>

<p>
  <strong>築年数:</strong>
  <%= @property.age %>
</p>

<p>
  <strong>備考:</strong>
  <%= @property.remarks %>
</p>

<hr>
<% number = 0 %>
<% @property.stations.each do | station | %>
  <% unless station.route == nil %>
  <h2>最寄駅<%= number += 1 %></h2>
<p>
  <strong>路線名:</strong>
  <%= station.route %>
</p>

<p>
  <strong>駅名:</strong>
  <%= station.station %>
</p>

<p>
  <strong>徒歩分数:</strong>
  <%= station.walking_minutes %>
</p>
<% end %>
<% end %>


